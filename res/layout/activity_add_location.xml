<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".AddWorkActivity" >
	<ScrollView 
	    android:id="@+id/layout" 
	    android:layout_height="match_parent"         
	    android:scrollbars="horizontal|vertical" 
	    android:layout_width="match_parent"     
	    android:layout_marginTop="5dip" 
	    android:layout_marginLeft="5dip"     
	    android:scrollbarStyle="outsideInset"
	    android:fillViewport="true"> 
	
	    <HorizontalScrollView 
	        android:id="@+id/horizontalView" 
	        android:layout_height="wrap_content"     
	        android:scrollbars="horizontal|vertical" 
	        android:layout_width="wrap_content"     
	        android:layout_marginTop="5dip">
	
	        <RelativeLayout
	            android:id="@+id/worklayout"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_marginBottom="0dip"
	            android:layout_marginLeft="0dip"
	            android:layout_marginRight="0dip"
	            android:layout_marginTop="0dip" >

<!-- 	            	Start with database keys. Spinner, label, textview. -->


	            <!-- item -->

	            <!-- receipt -->

<!-- 	            	Date field -->

	            <TextView
	                android:id="@+id/locationTextView"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentLeft="true"
	                
	                android:ems="10"
	                android:inputType="text" />

	            <TextView
	                android:id="@+id/locationLabelTextView"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignLeft="@+id/locationTextView"
	                android:layout_below="@+id/locationTextView"
	                android:text="Location Name" />

	            <EditText
	                android:id="@+id/phoneEditText"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentLeft="true"
	                android:layout_below="@+id/locationLabelTextView"
	                android:ems="10"
	                android:inputType="phone" />

	            <TextView
	                android:id="@+id/phoneLabelTextView"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignLeft="@+id/phoneEditText"
	                android:layout_below="@+id/phoneEditText"
	                android:text="Phone Number" />

	            <EditText
	                android:id="@+id/addressEditText"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentLeft="true"
	                android:layout_below="@+id/phoneLabelTextView"
	                android:inputType="textPostalAddress" >
	           </EditText>

	           <TextView
	                android:id="@+id/addressLabelTextView"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignLeft="@+id/addressEditText"
	                android:layout_below="@+id/addressEditText"
	                android:text="Address" />
	           
	           <EditText
	                android:id="@+id/noteEditText"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignLeft="@+id/addressLabelTextView"
	                android:layout_below="@+id/addressLabelTextView"
	                android:ems="10"
	                android:inputType="textMultiLine" >

	                
	            </EditText>

	            <TextView
	                android:id="@+id/noteLabelTextView"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignLeft="@+id/noteEditText"
	                android:layout_below="@+id/noteEditText"
	                android:text="Notes" />


	            

	        </RelativeLayout>

	    </HorizontalScrollView>
	</ScrollView>
</LinearLayout>

